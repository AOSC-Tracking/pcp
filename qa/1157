#!/bin/sh
# PCP QA Test No. 1157
# Exercise the BCC PMDA tcpretrans module - install, remove and values.
#
# Copyright (c) 2018 Andreas Gerstmayr.
#

seq=`basename $0`
echo "QA output created by $seq"

. ./common.bcc

_pmdabcc_check
which curl >/dev/null 2>&1 || _notrun "No curl binary installed"

net_dev=$(ip route get 1.1.1.1 | awk '{print $5}')

status=1       # failure is the default!
signal=$PCP_BINADM_DIR/pmsignal
$sudo rm -rf $tmp.* $seq.full

_simulate_network_troubles()
{
    echo Simulate packet loss
    $sudo tc qdisc add dev ${net_dev} root netem loss 50%
}

_revert_network_troubles()
{
    echo Revert intentional packet loss
    $sudo tc qdisc del dev ${net_dev} root
}

_prepare_pmda bcc
trap "_revert_network_troubles; _pmdabcc_cleanup; exit \$status" 0 1 2 3 15
_stop_auto_restart pmcd

_simulate_network_troubles

cat <<EOF | _pmdabcc_install
[pmda]
modules = tcpretrans
prefix = bcc.
[tcpretrans]
module = tcpretrans
cluster = 9
EOF

_pmdabcc_wait_for_metric

# Generate system activity for the BCC tcpretrans module
curl -s http://1.1.1.1
curl -s http://1.1.1.1
curl -s http://1.1.1.1

_pmdabcc_wait_for_value bcc.io.net.tcp.retrans.pid

echo "=== report metric values for pid ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.pid 2>&1 | tee -a $here/$seq.full \
| _value_filter_any

echo "=== report metric values for ip ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.ip 2>&1 | tee -a $here/$seq.full \
| _value_filter_any

echo "=== report metric values for laddr ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.laddr 2>&1 | tee -a $here/$seq.full \
| _value_filter_any

echo "=== report metric values for lport ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.lport 2>&1 | tee -a $here/$seq.full \
| _value_filter_nonzero

echo "=== report metric values for type ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.type 2>&1 | tee -a $here/$seq.full \
| _value_filter_exact '"RETRANSMIT"'

echo "=== report metric values for daddr ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.daddr 2>&1 | tee -a $here/$seq.full \
| _value_filter_exact '"1.1.1.1"'

echo "=== report metric values for dport ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.dport 2>&1 | tee -a $here/$seq.full \
| _value_filter_exact 80

echo "=== report metric values for state ==="
pminfo -dfmtT bcc.io.net.tcp.retrans.state 2>&1 | tee -a $here/$seq.full \
| _value_filter_exact '"SYN_SENT"'

_pmdabcc_remove

status=0
exit
